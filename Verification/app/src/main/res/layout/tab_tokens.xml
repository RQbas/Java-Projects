<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/grayLight"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/weight_depending"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="0.8"
        app:cardBackgroundColor="@color/grayMedium"
        app:cardElevation="@dimen/cardview_elevation">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:divider="@color/cyanLight"
            android:dividerHeight="3px">

        </ListView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/weight_depending"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="0.2"
        app:cardBackgroundColor="@color/grayMedium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <include layout="@layout/token_usage_button"></include>

            <include layout="@layout/token_new_set_button"></include>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
