<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buttonExit"
    android:layout_width="@dimen/main_button_width"
    android:layout_height="@dimen/main_button_height"
    android:layout_marginTop="@dimen/main_button_margin_top"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/blue"
    app:cardCornerRadius="@dimen/cardview_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="@dimen/weight_depending"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_button_img_margin"
            android:layout_marginRight="@dimen/main_button_img_margin"
            android:layout_weight="0.4"
            android:src="@drawable/ic_exit" />

        <TextView
            android:layout_width="@dimen/weight_depending"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="left|center_vertical"
            android:text="@string/exit"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>
